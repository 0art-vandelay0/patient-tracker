@{
    Layout = "_Layout";
}

@using DocOffice.Models;

<h1>Doctors</h1>
@if (@Model.Count == 0)
{
                <p>There are no doctors.</p>
}
else
{
        <ul>
        @foreach (Doctor doctor in @Model)
        {
        <li>
            @Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })
        </li>
        }
        </ul>
}