@{
    Layout = "_Layout";
} @using DocOffice.Models;

<h1>Patients</h1>
@if (@Model.Count == 0)
{
    <p>There are no patients.</p>
}
else
{
    <ul>
    @foreach (Patient patient in @Model)
        {
            <li>
                @Html.ActionLink($"{patient.Name}", "Details", new { id =
        patient.PatientId })
            </li>
        }
    </ul>
} 
